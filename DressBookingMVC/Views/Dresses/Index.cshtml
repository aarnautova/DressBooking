@model IEnumerable<DressBookingMVC.Models.DressBookingDataModel.Dress>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dresses catalogue</h2>

@if (User.IsInRole(DressBookingMVC.Helpers.Constants.AdminRoleName))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>    
}
@using (Html.BeginForm("Index", "Dresses", FormMethod.Get))
{
    <table class="table">
        <tr>
            <th>
                <input type="checkbox" name="Wedding" id="Wedding" />
                <label for="Wedding">Wedding</label>
            </th>
            <th>
                <input type="checkbox" name="Gown" id="Gown" />
                <label for="Gown">Gowns</label>
            </th>
            <th>
                <input type="checkbox" name="IsBought" id="IsBought" />
                <label for="IsBought">Show bought(for atelier order only)</label>
            </th>
            <th>
                <input class="input-sm" type="text" name="Search" placeholder="Search by name..." />
            </th>
            <th>
                <input class="input-sm" type="text" name="Size" placeholder="Search by size..." />
            </th>
            <th>
                <input class="btn-info" type="submit" value="Submit" />
            </th>
        </tr>
    </table>
}
<table class="table">
    <tr>
        <th>
            Picture
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Size
        </th>
        <th>
            Price to buy
        </th>
        <th>
            Price to book
        </th>
        @if (User.IsInRole(DressBookingMVC.Helpers.Constants.AdminRoleName))
        {
            <th>
                @Html.DisplayNameFor(model => model.IsCopy)
            </th>
        }
        <th>
            @Html.DisplayNameFor(model => model.IsBought)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Wedding)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        <img src="@Html.DisplayFor(modelItem => item.FrontPicLink)" width="100" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Size.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PriceToBuy)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PriceToBook)
    </td>
    @if (User.IsInRole(DressBookingMVC.Helpers.Constants.AdminRoleName))
    {
        <td>
            @Html.DisplayFor(modelItem =>item.IsCopy)
        </td>
    }
    <td>
        @Html.DisplayFor(modelItem => item.IsBought)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Wedding)
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.Id })
        <hr />
        @if (User.IsInRole(DressBookingMVC.Helpers.Constants.AdminRoleName))
        {
            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            @:<hr />
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        }
    </td>
    </tr>
    }

</table>
